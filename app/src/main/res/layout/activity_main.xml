<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_atuendo"
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:text="ATUENDO" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_comprador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPRADOR" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_contrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTRATO" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_equipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EQUIPO" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_imagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMAGEN" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_miembro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MIEMBRO" />
        </TableRow>
    </TableLayout>
</RelativeLayout>